{% extends "base.twig" %}

{% block header %}
{% include 'partial/_jumbotron.twig' with { page: page } %}
{% endblock %}

{% block content %}
<div id="" class="container">
    {% for post in posts %}
    <article class="row">
        {% include 'partial/_post_tease.twig' with { post: post } %}
    </article>
    {% endfor %}

    <div class="row">
        {% include 'partial/pagination.twig' with { pagination: posts.pagination({show_all: false, mid_size: 3, end_size: 2}) } %}
    </div>
</div>
{% endblock %}
