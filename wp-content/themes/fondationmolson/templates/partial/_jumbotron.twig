<div class="jumbotron jumbotron-fluid d-flex align-items-center p-0" style="background:url({{TimberImage(page.get_field('intro_background_image'))}}) no-repeat center center;background-size:cover;min-height:300px;">
	<div class="container">
		<h1 class="display-4">{{ page.get_field('intro_title') }}</h1>
		<p class="lead">{{ page.get_field('intro_text') }}</p>
		<p class="lead">
			{% if page.get_field('ctas') %}
				{% for item in page.get_field('ctas') %}
				<a class="btn btn-primary" href="{{ item.link }}">{{ item.title }}</a>
				{% endfor %}
			{% endif %}
		</p>
	</div>
</div>
